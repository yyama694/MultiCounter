<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/counter_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="#0000"
    android:padding="0dp">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_add_counter"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_weight="0"
        android:adjustViewBounds="true"
        android:background="@drawable/state_pressed_ripple"
        android:elevation="3dp"
        android:onClick="onClickAddBtn"
        android:paddingLeft="2dp"
        android:paddingTop="8dp"
        android:paddingRight="-20dp"
        android:paddingBottom="-6dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_circle2" />
    <!-- android:src="@drawable/ic_filter_state" -->
    <!--        android:foreground="?android:attr/selectableItemBackground"-->


</LinearLayout>